{
  "name": "nestjs-cqrs-ddd",
  "version": "0.0.1",
  "description": "NestJS Boilerplace for CQRS and DDD",
  "author": "Get√∫lio Magela Silva",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main",
  "scripts": {
    "build": "nest build",
    "docs": "npx @compodoc/compodoc -p tsconfig.json -s -d .docs",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/config/jest-integration.js",
    "test:integration:cov": "jest --config ./test/config/jest-integration.js --coverage",
    "test:all": "jest --config ./test/config/jest-all.js",
    "test:all:cov": "jest --config ./test/config/jest-all.js --coverage"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.0.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "@types/compression": "^1.7.5",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "mongoose": "^8.1.2",
    "nest-winston": "^1.9.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.23",
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/amqplib": "^0.10.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s",
      "<rootDir>/libs/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "branches": 50
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/test/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@gedai/tactical-design(|/.*)$": "<rootDir>/libs/tactical-design/src/$1",
      "^@gedai/amqp(|/.*)$": "<rootDir>/libs/amqp/src/$1",
      "^@gedai/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@gedai/test-factory(|/.*)$": "<rootDir>/test/$1",
      "^@gedai/stub-factory(|/.*)$": "<rootDir>/test/stubs/$1",
      "^@gedai/contextify(|/.*)$": "<rootDir>/libs/contextify/src/$1",
      "^@gedai/strategic-design(|/.*)$": "<rootDir>/libs/strategic-design/src/$1",
      "^@gedai/transactional-mongoose(|/.*)$": "<rootDir>/libs/transactional-mongoose/src/$1",
      "^@gedai/tactical-design-mongoose(|/.*)$": "<rootDir>/libs/tactical-design-mongoose/src/$1",
      "^@gedai/transactional(|/.*)$": "<rootDir>/libs/transactional/src/$1",
      "^@gedai/tactical-design-amqp(|/.*)$": "<rootDir>/libs/tactical-design-amqp/src/$1"
    }
  }
}
