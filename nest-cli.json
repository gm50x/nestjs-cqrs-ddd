{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "tactical-domain": {
      "type": "library",
      "root": "libs/tactical-domain",
      "entryFile": "index",
      "sourceRoot": "libs/tactical-domain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tactical-domain/tsconfig.lib.json"
      }
    },
    "audit": {
      "type": "library",
      "root": "libs/audit",
      "entryFile": "index",
      "sourceRoot": "libs/audit/src",
      "compilerOptions": {
        "tsConfigPath": "libs/audit/tsconfig.lib.json"
      }
    },
    "amqp": {
      "type": "library",
      "root": "libs/amqp",
      "entryFile": "index",
      "sourceRoot": "libs/amqp/src",
      "compilerOptions": {
        "tsConfigPath": "libs/amqp/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "async-context": {
      "type": "library",
      "root": "libs/async-context",
      "entryFile": "index",
      "sourceRoot": "libs/async-context/src",
      "compilerOptions": {
        "tsConfigPath": "libs/async-context/tsconfig.lib.json"
      }
    },
    "tactical-domain-adapter-mongoose": {
      "type": "library",
      "root": "libs/tactical-domain-adapter-mongoose",
      "entryFile": "index",
      "sourceRoot": "libs/tactical-domain-adapter-mongoose/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tactical-domain-adapter-mongoose/tsconfig.lib.json"
      }
    }
  }
}