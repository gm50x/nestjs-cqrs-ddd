{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "tracing": {
      "type": "library",
      "root": "libs/tracing",
      "entryFile": "index",
      "sourceRoot": "libs/tracing/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tracing/tsconfig.lib.json"
      }
    },
    "core-ddd": {
      "type": "library",
      "root": "libs/core-ddd",
      "entryFile": "index",
      "sourceRoot": "libs/core-ddd/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core-ddd/tsconfig.lib.json"
      }
    },
    "audit": {
      "type": "library",
      "root": "libs/audit",
      "entryFile": "index",
      "sourceRoot": "libs/audit/src",
      "compilerOptions": {
        "tsConfigPath": "libs/audit/tsconfig.lib.json"
      }
    },
    "amqp": {
      "type": "library",
      "root": "libs/amqp",
      "entryFile": "index",
      "sourceRoot": "libs/amqp/src",
      "compilerOptions": {
        "tsConfigPath": "libs/amqp/tsconfig.lib.json"
      }
    }
  }
}